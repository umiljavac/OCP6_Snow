<div class="well custom-form col-md-offset-2 col-md-8 col-sm-12 font-caveat">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}

    <div class="form-group margin-top">
        {{ form_label(form.name, "Nom de la figure") }}
        {{ form_errors(form.name) }}
        <div>
            {{ form_widget(form.name, {'attr': {'class': 'form-control font-caveat-sm'}}) }}
        </div>
    </div>

    <div class="form-group margin-top">
        {{ form_label(form.trickGroup, 'Groupe de la figure') }}
        <div>
            {{ form_widget(form.trickGroup, {'attr': {'class': 'form-control font-caveat-sm'}}) }}
        </div>
    </div>

    <div class="form-group margin-top">
        {{ form_label(form.description, 'Description') }}
        {{ form_errors(form.description) }}
        <div>
            {{ form_widget(form.description, {'attr': {'class': 'form-control font-caveat-sm', 'rows': '10'}}) }}
        </div>
    </div>

    <div class="form-group margin-top">
        {# {{ form_row(form.images, {'attr': {'class': 'form-media'}}) }} #}
        {{ form_label(form.images, 'images') }}
        {{ form_errors(form.images) }}
        <div>
            {{ form_widget(form.description, {'attr': {'class': 'form-media'}}) }}

            {% if app.request.get('_route') == 'trick_update' %}
                {% for image in trick.images %}
                    <div class="img-slot form-group form-media img-form">
                        <div class="photo">
                            <img class="img-responsive image" style="background-image:url({{ "../" ~ image.getUploadDir() ~ "/" ~ image.url }})" alt="{{ image.alt }}" src="{{ "../../" ~ image.getUploadDir() ~ "/" ~ image.url }}">
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <a href="#" id="add_image" class="btn btn-default">Ajouter une image</a>
    </div>

    <div class="form-group margin-top">
        {{ form_row(form.videos, {'attr': {'class': 'form-media videos-form'}}) }}
        <a href="#" id="add_video" class="btn btn-default">Ajouter une vid√©o</a>
    </div>
    <div class="form-group margin-top">
        {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    {{ form_end(form) }}
</div>
